<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.testesame1.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.testesame1.ui.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.testesame1.ui.character.CharacterFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_your_character" />

    <activity android:id="@+id/activity_main2"
        android:name="com.example.testesame1.ui.MainActivity2"
        android:label="@string/activity2"
        tools:layout="@layout/activity_main2"
        />

    <action android:id="@+id/action_HomeFragment_to_ActivityMain2"
        app:destination="@id/activity_main2"/>
</navigation>